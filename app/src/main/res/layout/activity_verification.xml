<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGreen1"
    android:orientation="vertical"
    tools:context=".ScrollingActivity">

    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_margin="@dimen/_15sdp"
        android:background="@drawable/rounded_black_border"
        android:padding="@dimen/_8sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_60sdp"
        android:fontFamily="@font/alegreyasans_medium"
        android:gravity="center"
        android:text="@string/verification"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_welcome"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:fontFamily="@font/alegreyasans_medium"
            android:text="@string/enter_otp"
            android:textAllCaps="true"
            android:textColor="@color/colorDarkBlue2"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_emp_code1"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_weight=".25"
                android:background="@drawable/circle_black_boder"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/colorTextHint"
                android:textColorHint="@color/colorText"
                android:textSize="@dimen/_15sdp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_emp_code2"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_weight=".25"
                android:background="@drawable/circle_black_boder"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/colorTextHint"
                android:textColorHint="@color/colorText"
                android:textSize="@dimen/_15sdp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_emp_code3"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_weight=".25"
                android:background="@drawable/circle_black_boder"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/colorTextHint"
                android:textColorHint="@color/colorText"
                android:textSize="@dimen/_15sdp" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_emp_code4"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight=".25"
                android:background="@drawable/circle_black_boder"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:inputType="numberPassword"
                android:lines="1"
                android:maxLength="1"
                android:maxLines="1"
                android:textColor="@color/colorTextHint"
                android:textColorHint="@color/colorText"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_start"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/rounded_marun"
            android:fontFamily="@font/alegreyasans_regular"
            android:gravity="center"
            android:text="@string/submit"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

    </LinearLayout>


</RelativeLayout>